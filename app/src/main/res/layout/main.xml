                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="4 Ordens de Serviço"
                android:textStyle="bold"/>

            <TextView
                android:layout_toRightOf="@+id/card_title3"
                android:layout_width="wrap_content"
